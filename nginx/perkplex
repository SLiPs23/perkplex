##
# You should look at the following URL's in order to grasp a solid understanding
# of Nginx configuration files in order to fully unleash the power of Nginx.
# http://wiki.nginx.org/Pitfalls
# http://wiki.nginx.org/QuickStart
# http://wiki.nginx.org/Configuration
#
# Generally, you will want to move this file somewhere, and start with a clean
# file but keep this around for reference. Or just disable in sites-enabled.
#
# Please see /usr/share/doc/nginx-doc/examples/ for more detailed examples.
##
server {
    listen 4080 default_server;
    listen [::]:4080 default_server ipv6only=on;

    root /usr/share/nginx/html/PlexRedirect;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ =404;
    }

    location /nginx_status {
        stub_status on;
        access_log   off;
        allow 127.0.0.1;
        deny all;
       }  

    server_name perkplex.geekgalaxy.com 192.168.1.20;
        auth_basic "Restricted";
        auth_basic_user_file /etc/nginx/.htpasswd;

    location /plexstats {
       proxy_pass http://127.0.0.1:8181;
       proxy_set_header Host $host;
       proxy_set_header X-Real-IP $remote_addr;
       proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
       }

    location /muximux {
       proxy_pass http://127.0.0.1:30005/;
       proxy_set_header Host $host;
       proxy_set_header X-Real-IP $remote_addr;
       proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
       }

 location /plexrequest {		
     return 301 $scheme://$host/plexrequest;		
}

location /plexrequest/ {
    proxy_pass http://192.168.1.20:32227;
    proxy_set_header Host $host;
    proxy_set_header X-Forwarded-Host $server_name;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Ssl on;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout  90;
    proxy_redirect http://192.168.1.20:32227 https://$host;
    auth_basic "off";
}
if ($http_referer ~* /plexrequest/) {
        rewrite ^/dist/(.*) $scheme://$host/plexrequest/dist/$1 permanent;
}

    location /couch {
       proxy_pass http://192.168.1.4:5050;
       proxy_set_header Host $host;
       proxy_set_header X-Real-IP $remote_addr;
       proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
       }

    location /sonarr {
       proxy_pass http://192.168.1.4:8989;
       proxy_set_header Host $host;
       proxy_set_header X-Real-IP $remote_addr;
       proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
       }

    location /grafana/ {
       proxy_pass http://127.0.0.1:3000/;
       proxy_set_header Host $host;
       }

    location /syncthing/ {
       proxy_set_header        Host $host;
       proxy_set_header        X-Real-IP $remote_addr;
       proxy_set_header        X-Forwarded-For $proxy_add_x_forwarded_for;
       proxy_set_header        X-Forwarded-Proto $scheme;

       proxy_pass              http://192.168.1.4:8384/;
       }

    location /monit/ {
       rewrite ^/monit/(.*) /$1 break;
       proxy_ignore_client_abort on;
       proxy_pass   http://127.0.0.1:2812;
       proxy_set_header Host $host;
  }

    location /munin {
       proxy_pass http://127.0.0.1;
       proxy_set_header Host $host;
       proxy_set_header X-Real-IP $remote_addr;
       proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
       }

}

